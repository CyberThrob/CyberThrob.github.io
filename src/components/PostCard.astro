---
interface Props {
    imgSrc?: string;
    link: string;
    title: string;
    description: string;
}

const { imgSrc, title, link, description } = Astro.props;
---

<a
    class="flex flex-col hover:text-blue-400 bg-slate-900 gradient-card bg-opacity-40 rounded-xl transition-transform duration-300 ease-out hover:scale-[1.03]"
    href={link}
    title={description}
>
    <img
        class="p-[0.2rem] rounded-xl overflow-hidden h-full w-full"
        src={imgSrc}
        alt=""
    />

    <h1
        class="lg:h-[10rem] py-10 px-2 text-center font-bold text-2xl overflow-auto"
    >
        {title}
    </h1>
</a>

<style>
    :hover.gradient-card {
        background-image: linear-gradient(
            45deg,
            rgba(0, 132, 255, 0.1),
            rgba(0, 0, 255, 0.1)
        );
        background-size: 400%;
        animation: bg-anim 1s infinite alternate;
    }

    @keyframes bg-anim {
        0% {
            background-position: left;
        }
        100% {
            background-position: right;
        }
    }
</style>