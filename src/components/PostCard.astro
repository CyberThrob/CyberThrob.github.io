---
interface Props {
    imgSrc?: string;
    link: string;
    title: string;
    description: string;
}

const { imgSrc, title, link, description } = Astro.props;
---

<a
    class="flex flex-col rounded-lg shadow-lg bg-slate-900 bg-opacity-40
    hover:bg-slate-950 hover:bg-[radial-gradient(ellipse_80%_80%_at_50%_30%,rgba(14,165,233,0.5),rgba(255,255,255,0))]
    hover:text-sky-500"
    href={link}
    title={description}
>
    <img
        class="p-[0.2rem] rounded-xl overflow-hidden h-full w-full"
        src={imgSrc}
        alt=""
    />

    <h1
        class="lg:h-[10rem] py-10 px-2 text-center font-bold text-2xl overflow-auto"
    >
        {title}
    </h1>
</a>
